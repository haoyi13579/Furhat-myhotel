<?xml version="1.0" encoding="utf-8"?>
<grammar xml:lang="zh-CN" version="1.0" 
	xmlns="http://www.w3.org/2001/06/grammar" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.w3.org/2001/06/grammar http://www.iristk.net/xml/srgs.xsd" tag-format="semantics/1.0">


  <rule id="attraction" scope="public">
  	<one-of>
		<item>景点</item>
		<item>旅游景点</item>
		<item>好玩</item>
		<item>观光</item>  	
  	</one-of>
  	<tag>out.attractions=1</tag>
  </rule>
  
  <rule id="natural" scope="public">
  	<one-of>
  		<item>自然</item>
  		<item>自然景点</item>
  		<item>自然类</item>
  		<item>风景</item>
  	</one-of>
  	<tag>out.natural=1</tag>
  </rule>
  
  <rule id="historical" scope="public">
  	<one-of>
  		<item>历史</item>
  		<item>历史景点</item>
  		<item>历史类</item>
  		<item>文化</item>
  		<item>人文</item>
  	</one-of>
  	<tag>out.historical=1</tag>
  </rule>
  
  <rule id="popular" scope="public">
  	<one-of>
  		<item>热门景点</item>
  		<item>热门</item>
  		<item>受欢迎</item>
  		<item>最好</item>
  	</one-of>
  	<tag>out.popular=1</tag>
  </rule>
  
  <rule id="attrname" scope="public">
  	<one-of>
		<item>
			<one-of>
				<item>格拉斯哥植物园</item>
				<item>植物园</item>
				<item>植物</item>
			</one-of>
			<tag>out.attrname="Glasgow Botanic Gardens"</tag>
		</item>
		<item>
			<one-of>
				<item>格拉斯哥大教堂</item>
				<item>教堂</item>
			</one-of>
			<tag>out.attrname="Glasgow Cathedral"</tag>
		</item>
		<item>
			<one-of>
				<item>凯文葛罗夫公园</item>
				<item>公园</item>
				<item>凯文公园</item>
				<item>葛罗夫公园</item>
			</one-of>
			<tag>out.attrname="Kelvingrove Park"</tag>
		</item>
		<item>
			<one-of>
				<item>凯文葛罗夫艺术博物馆</item>
				<item>艺术博物馆</item>
				<item>艺术</item>
				<item>葛罗夫博物馆</item>
				<item>凯文夫博物馆</item>
			</one-of>
			<tag>out.attrname="Kelvingrove Art Gallery and Museum"</tag>
		</item>
		<item>
			<one-of>
				<item>河滨博物馆</item>
				<item>河滨</item>
			</one-of>
			<tag>out.attrname="Riverside Museum"</tag>
		</item>
		<item>
			<one-of>
				<item>格拉斯哥大教堂</item>
				<item>大教堂</item>
				<item>教堂</item>
			</one-of>
			<tag>out.attrname="Glasgow Cathedral"</tag>
		</item>
  	</one-of>
  </rule>
  
  <rule id="transportation" scope="public">
  	<one-of>
  		<item>交通</item>
  		<item>公交</item>
  		<item>地铁</item>
  		<item>出行方式</item>
  	</one-of>
  	<tag>out.transportation=1</tag>
  </rule>
  
  
  
  <rule id="room" scope="public">
  	<one-of>
  		<item>房间</item>
  		<item>住</item>
  	</one-of>
  	<tag>out.rooms=1</tag>
  </rule>
  

  
  <rule id="otherroom" scope="public">
  	<one-of>
  		<item>餐厅</item>
  		<item>食堂</item>
  		<item>吃饭</item>
  		<item>健身</item> 
  		<item>锻炼</item> 
  		<item>运动</item>
  		<item>健身房</item>		
  	</one-of>
  		<tag>out.otherroom=1</tag> 
  </rule>
  
  <rule id="weather" scope="public">
  	<one-of>
  		<item>天气</item>
  		<item>温度</item>
  		<item>天怎么样</item>
  		<item>气温</item>
  		<item>几度</item>
  		<item>多少度</item>
  	</one-of>
  	<tag>out.weather=1</tag>
  </rule>
  
  <rule id="yes" scope="public">
  	<one-of>
  		<item>好</item>
  		<item>需要</item>
  		<item>恩</item>
  		<item>可以</item>
  		<item>是</item>
  		<item>对</item>
  	</one-of>
  	<tag>out.yes=1</tag>
  </rule>
  
  <rule id="no" scope="public">
  	<one-of>
  		<item>不</item>
  		<item>不用</item>
  		<item>不需要</item>
  		<item>没有</item>
  	</one-of>
  	<tag>out.no=1</tag>
  </rule>
  
</grammar>
